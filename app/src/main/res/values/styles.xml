<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Menu theme -->
    <style name="MenuTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">32dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:layout_marginTop">@dimen/default_margin</item>
        <item name="android:layout_marginLeft">@dimen/default_margin</item>
        <item name="android:layout_marginRight">@dimen/default_margin</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">32sp</item>
        <item name="android:background">@color/colorMenu</item>
    </style>

    <!-- Music list item -->
    <style name="MusicListItemTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/default_music_list_album_cover_size</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <!-- Music list item ImageView theme -->
    <style name="MusicListItemImageViewTheme">
        <!-- Default album art -->
        <item name="android:layout_width">@dimen/default_music_list_album_cover_size</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/default_album_cover</item>
        <item name="android:scaleType">fitXY</item>
    </style>

    <!-- Music list item TextView group theme -->
    <style name="MusicListItemTextViewGroupTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/listItem</item>
    </style>

    <!-- Music list item TextView theme -->
    <style name="MusicListItemTextViewTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:padding">8dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <!-- Music player theme -->
    <style name="MusicPlayerTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/background</item>
    </style>

    <!-- Music player info square theme -->
    <style name="MusicPlayerInfoSquareTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/default_margin</item>
    </style>

    <!-- Music player album cover theme -->
    <style name="MusicPlayerAlbumCoverTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:scaleType">fitXY</item>
    </style>

    <!-- Music player info group theme -->
    <style name="MusicPlayerInfoGroupTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:layout_margin">@dimen/default_margin</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:orientation">vertical</item>
    </style>

    <!-- Music player info theme -->
    <style name="MusicPlayerInfoTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <!-- Music player interface group theme -->
    <style name="MusicPlayerInterfaceGroupTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">32dp</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <!-- Music player interface theme -->
    <style name="MusicPlayerInterfaceTheme">
        <item name="android:layout_width">96dp</item>
        <item name="android:layout_height">96dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">@dimen/default_margin</item>
        <item name="android:scaleType">fitXY</item>
    </style>

</resources>
